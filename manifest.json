{
  "name": "Wilma schedule goodizer",
  "description": "Human readable schedule for wilma. Icon is from https://icons8.com/",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "50": "/assets/icons/icons8-calendar-50.png"
  },

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "https://*.inschool.fi/*/schedule"
  ],

  "content_scripts": [
    {
      "matches": [ "https://*.inschool.fi/*/schedule*" ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
